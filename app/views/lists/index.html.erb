<h1>All Lists<h1>
<br>
<div class="row justify-content-md-center">
  <div class="cards">
<% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>');">
        <%= link_to list.name, list, style: "text-decoration: none; color: white;" %>
      </div>
    <% else %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <%= link_to list.name, list, style: "text-decoration: none; color: white;" %>
    </div>

    <% end %>
<% end %>
  </div>
</div>
